<div class="container mt-3">
	<div class="row">
		<div class="col-md-6">
			<h2>Form edit data</h2>

			<% if (typeof errors != 'undefined') { %>
			<div class="alert alert-danger" role="alert">
				<ul class="mb-0">
					<% errors.forEach(error => { %>
					<li><%= error.msg %></li>
					<% }) %>
				</ul>
			</div>
			<% } %>

			<form method="post" action="/contact/<%= contact.id %>/update">
                <input type="hidden" name="oldEmail" value="<%= contact.oldEmail || contact.email %>">
				<div class="mb-3">
					<label for="name" class="form-label">Name</label>
					<input type="text" class="form-control" id="name" name="name" value="<%= contact.name %>" required />
				</div>
				<div class="mb-3">
                    <label for="email" class="form-label">Email</label>
					<input type="email" class="form-control" id="email" name="email" value="<%= contact.email %>" required/>
				</div>
                <div class="mb-3">
                    <label for="phoneNumber" class="form-label">Phone Number</label>
                    <input type="text" class="form-control" id="phoneNumber" name="phoneNumber" value="<%= contact.phoneNumber %>" required />
                </div>
				<button type="submit" class="btn btn-primary">Submit</button>
			</form>
		</div>
	</div>
</div>
