<div class="container mt-3">
	<div class="row">
		<div class="col">
			<h2>Contacts List</h2>

			<a href="contact/create" class="btn btn-primary mb-2">Add Data +</a>

			<% if (msg.length != 0) { %>
			<div class="alert alert-success" role="alert">
				<%= msg %>
			</div>
			<% } %>
			<table class="table table-striped table-dark">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Name</th>
						<th scope="col">Phone Number</th>
						<th scope="col">Email</th>
						<th scope="col">Action</th>
					</tr>
				</thead>
				<tbody>
					<% contacts.forEach((contact, i) => { %>
					<tr>
						<th scope="row"><%= i+1 %></th>
						<td><%= contact.name %></td>
						<td><%= contact.phone %></td>
						<td><%= contact.email %></td>
						<td>
							<a href="/contact/<%= contact.id %>" class="btn btn-success btn-sm"><i class="bi bi-info-circle"></i> Detail</a>
						</td>
					</tr>
					<% }) %>
				</tbody>
			</table>
		</div>
	</div>
</div>
